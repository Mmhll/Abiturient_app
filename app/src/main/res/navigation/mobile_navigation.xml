<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mhl.myapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_dashboard"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_home_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.mhl.myapplication.ui.about.AboutFragment"
        android:label="@string/title_dashboard"

        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_tourFragment"
            app:destination="@id/tourFragment" />
        <action
            android:id="@+id/action_aboutFragment_to_daysFragment"
            app:destination="@id/daysFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.mhl.myapplication.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/tourFragment"
        android:name="com.mhl.myapplication.ui.about.TourFragment"
        android:label="fragment_tour"
        tools:layout="@layout/fragment_tour" />
    <fragment
        android:id="@+id/daysFragment"
        android:name="com.mhl.myapplication.ui.about.DaysFragment"
        android:label="fragment_days"
        tools:layout="@layout/fragment_days" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.mhl.myapplication.ui.documents.notentered.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_signInFragment_to_signedFragment"
            app:destination="@id/signedFragment" />
    </fragment>
    <fragment
        android:id="@+id/signedFragment"
        android:name="com.mhl.myapplication.ui.documents.entered.SignedFragment"
        android:label="fragment_signed"
        tools:layout="@layout/fragment_signed" >
        <action
            android:id="@+id/action_signedFragment_to_navigation_home2"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.mhl.myapplication.ui.documents.notentered.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_signedFragment"
            app:destination="@id/signedFragment" />
    </fragment>
</navigation>